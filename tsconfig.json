{
  "include": [ "src/", "scripts/" ],
  "exclude": [ "node_modules/" ],
  "files": [ "src/types/index.d.ts"],
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "noEmit": true,
    "target": "ES2022",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "module": "CommonJS"
  }
}